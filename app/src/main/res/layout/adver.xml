<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AdvertisingFragment">

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBottomNavigationBackground"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBottomNavigationBackground">

            <ImageView
                android:id="@+id/advertisingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_adver2" />

            <ImageButton
                android:id="@+id/advertisingCloseButton"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_close2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/advertisingCloseButton"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/advertisingText"
                android:textColor="@color/colorDarkBlue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/advertisingCloseButton"
                android:layout_alignParentTop="true"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/manrope_bold"
                android:text="БАЙКАЛ АВТО ТРАК"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>