<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.AdvertisingFragment">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBottomNavigationBackground"
        app:cardPreventCornerOverlap="true"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="171dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBottomNavigationBackground">

            <ImageView
                android:id="@+id/advertisingImg"
                android:layout_width="260dp"
                android:layout_height="129dp"
                android:scaleType="fitCenter"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_advertising_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorLightGray2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/advertisingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/manrope_semibold"
                    android:gravity="center"
                    android:text="@string/advertisingTitle"
                    style="@style/DarkTextColor"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/advertisingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/advertisingText"
                style="@style/DarkTextColor"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/advertisingCloseButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_close2" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>