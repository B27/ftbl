    <TextView
        android:id="@+id/foulsHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_semibold"
        android:paddingBottom="8dp"
        android:paddingStart="13dp"
        android:paddingTop="8dp"
        android:text="Тайм 1"
        android:textColor="@color/colorLightGrayForText"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/foulsCommand1Logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/ic_football" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/foulsCommand1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/commands"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/foulsCommand1FoulsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="15"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start">

           <TextView
                android:id="@+id/foulsCommand2FoulsNum"
               android:layout_margin="5sp"
               android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start">

            <TextView
                android:id="@+id/foulsCommand2Title"
                android:layout_margin="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/commands"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/foulsCommand2Logo"
                android:layout_gravity="start"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_football" />
        </LinearLayout>
    </LinearLayout>
