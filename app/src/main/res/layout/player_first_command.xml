<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/playerCommandFirstNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:paddingEnd="10sp"
            android:fontFamily="@font/manrope_regular"
            android:text="@string/num"
            android:textColor="@color/colorLightGrayForText"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/playerCommandFirstLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/playerCommandFirstName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:paddingEnd="15sp"
            android:fontFamily="@font/manrope_regular"
            android:text="@string/commandPlayer"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="14sp" />



    </LinearLayout>

    <View
        android:id="@+id/playerCommandFirstLine"
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:layout_marginStart="8sp"
        android:paddingEnd="10sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@color/colorLightGray" />

</LinearLayout>