<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scoreHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_semibold"
        android:paddingBottom="8dp"
        android:paddingStart="13dp"
        android:paddingTop="8dp"
        android:text="Тайм 1"
        android:textColor="@color/colorLightGrayForText"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/scoreHalfCommand1Logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/ic_football" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/scoreHalfCommand1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/commands"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/scoreHalfCommand1Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="15"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/colorBottomNavigationUnChecked"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:id="@+id/scoreHalfCommand2Num"
                android:layout_margin="5sp"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start">

            <TextView
                android:id="@+id/scoreHalfCommand2Title"
                android:layout_margin="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/commands"
                android:textColor="@color/colorBottomNavigationUnChecked"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/scoreHalfCommand2Logo"
                android:layout_gravity="start"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_football" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/scoreHalfLine"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_gravity="end"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightGray" />
</LinearLayout>