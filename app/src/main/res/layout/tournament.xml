        <!--android:background="@color/colorWhite">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/colorWhite">
        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorWhite">-->

            <ImageView
                android:id="@+id/tournamentStatusImg"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_continues" />

            <TextView
                android:id="@+id/tournamentTitle"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tournamentDate"
                android:layout_marginTop="12dp"
                android:text="@string/tournamentTitle"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tournamentDate"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tournamentStatusImg"
                android:layout_alignParentStart="true"
                android:layout_marginStart="95dp"
                android:text="@string/tournamentDate"
                android:textColor="@color/colorDarkGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tournamentCommandNum"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/tournamentTitle"
                android:paddingBottom="10sp"
                android:text="@string/tournamentCommandNum"
                android:textColor="@color/colorDarkGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tournamentStatusFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tournamentTitle"
                android:layout_centerVertical="true"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/tournamentStatusFinish"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:visibility="gone" />

            <!--<TextView-->
                <!--android:id="@+id/tournamentStatusFinish"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignStart="@+id/tournamentTitle"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:fontFamily="@font/manrope_regular"-->
                <!--android:padding="1sp"-->
                <!--android:text="@string/tournamentStatusFinish"-->
                <!--android:textColor="@color/colorGray"-->
                <!--android:textSize="10sp"-->
                <!--android:visibility="gone" />-->

            <ImageButton
                android:id="@+id/tournamentButtonShow"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_arrow_right" />
        </RelativeLayout>
        <View
            android:id="@+id/tournamentLine"
            android:layout_width="270dp"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="@color/colorLightGray" />
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>