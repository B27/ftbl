<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/colorLightGray"
    android:id="@+id/tournamentaListLayout"
    >

    <!--android:padding="1sp"-->
    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="365dp"-->
    <!--android:layout_height="125dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--card_view:cardCornerRadius="4dp"-->
    <!--card_view:cardElevation="0dp"-->
    <!--android:background="@color/colorWhite">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorWhite">-->

            <!--<ImageView-->
                <!--android:id="@+id/userCommandTournamentStatusImg"-->
                <!--android:layout_width="65dp"-->
                <!--android:layout_height="65dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginStart="14dp"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:src="@drawable/ic_continues" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userCommandTournamentTitle"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tournamentTitle"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:layout_marginBottom="5sp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/userCommandInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/tournamentCommandTitle1"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:layout_marginBottom="3sp"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/userCommandTournamentDate"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tournamentDate"
                    android:layout_marginBottom="3sp"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/userCommandTournamentTransfer"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tournamentDate"
                    android:layout_marginBottom="3sp"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/userCommandInfoPlayersNum"
                    android:fontFamily="@font/manrope_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:text="@string/userCommandInfoPlayersNum"
                    android:textColor="@color/colorBottomNavigationUnChecked"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/userCommandShow"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_arrow_right"/>


        </LinearLayout>
        <View
            android:id="@+id/userCommandLine"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="@color/colorLightGray" />
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>